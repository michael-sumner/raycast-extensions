{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "title-caps",
  "title": "Title Caps",
  "description": "Capitalize your text using correct English title case rules.",
  "icon": "command-icon.png",
  "author": "michael-sumner",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Title Caps",
      "description": "Capitalize your text using correct English title case rules.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.3",
    "titlecase": "^1.1.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/titlecase": "^1.1.2",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
